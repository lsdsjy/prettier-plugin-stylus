{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Vitest File",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run", "${file}"],
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Prettier on Current File",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/prettier/bin-prettier.js",
      "args": ["--plugin", "${workspaceFolder}/dist/index.js", "${file}"],
      "console": "integratedTerminal"
    }
  ]
}
